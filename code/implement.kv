#: import C kivy.utils.get_color_from_hex
<Row@RecycleKVIDsDataViewBehavior+BoxLayout>:
    estado: estado
    canvas.before:
        Color:
            rgba: C("#737373")
        Rectangle:
            size: self.size
            pos: self.pos
    spacing: "2sp"
    padding: "3sp"
    LabelDate:
        size_hint_x: .2
        id: ide
    LabelDateLong:
        id: name
    LabelDate:
        id: area
    LabelDate:
        id: prov
    LabelDate:
        size_hint_x: .35
        id: estado
    LabelDateLong:
        id: description


<ImplementView>:
    rv: rv
    change_state: change_state
    change_id: change_id
    BoxContainer:
        padding: "5sp"
        orientation: 'vertical'
        BoxContainer:
            size_hint_y: .1
            BoxLabel:
                size_hint_x: .1
            ImageButton:
                size_hint_x: .1
                source: 'icos/arrow_back.ico'
                size_hint: .1, .7
                on_release: app.go_menu()
                #on_release: root.clear()
                on_release: seeker.text = message.text = ""
            BoxLabel:
                size_hint_x: .65
            Tittle:
                size_hint_y: .7
                text: "REGISTRO DE IMPLEMENTOS"
            BoxLabel:
                size_hint_x: 1.
        BoxContainerSentences:
            orientation: "vertical"
            size_hint_y: .35
            BoxContainer:
                BoxLabel:
                    size_hint_x: .4
                CustomButton2:
                    text: 'Ver todos'
                    on_release: message.text = root.show_all_record()
                    on_press: seeker.text = ""
                CustomButton2:
                    text: 'Limpiar pantalla'
                    on_release: root.clear()
                    on_release: message.text = seeker.text = ""
                BoxLabel:
                    size_hint_x: .4
            BoxContainer:
                size_hint_y: 1.
                BoxLabel
                TextInput:
                    id: seeker
                    size_hint_x: 0.9
                    hint_text: 'Buscar'
                    multiline: False
                    padding: dp(5), dp(5), dp(5), dp(5)
                    on_focus: message.text = ''
                CustomButton2:
                    size_hint_x: 0.5
                    text: 'ID'
                    on_release: message.text = str(root.search(seeker.text, 1))
                CustomButton2:
                    size_hint_x: 0.5
                    text: 'Estado'
                    on_release: message.text = str(root.search(seeker.text, 2))
                CustomButton2:
                    size_hint_x: 0.5
                    text: "Area"
                    on_release: message.text = str(root.search(seeker.text, 3))
                BoxLabel
            BoxContainer:
                BoxLabel
                TextInput:
                    id: change_id
                    size_hint_x: .1
                    hint_text: 'ID'
                    multiline: False
                    padding: dp(5), dp(5), dp(5), dp(5)
                    on_focus: message.text = ''
                TextInput:
                    id: change_state
                    size_hint_x: .1
                    hint_text: 'state'
                    multiline: False
                    padding: dp(5), dp(5), dp(5), dp(5)
                    on_focus: message.text = ''
                CustomButton2:
                    size_hint_x: 0.3
                    text: 'Update'
                    on_release: message.text = str(root.update_state(change_id.text, change_state.text))
                BoxLabel
            TextMessage:
                size_hint: 1., .6
                id: message
        GridLayout:
            cols: 6
            size_hint_y: None
            height: dp(20)
            spacing: "2sp"
            ButtonColumn:
                size_hint_x: .2
                text: "id"
                on_release: root.sort(self.text)
            ButtonColumn:
                text: "Nombre"
                on_release: root.sort(self.text)
            ButtonColumn:
                text: "Area"
                on_release: root.sort(self.text)
            ButtonColumn:
                text: "Proveedor"
                on_release: root.sort(self.text)
            ButtonColumn:
                size_hint_x: .35
                text: "Estado"
                on_release: root.sort(self.text)
            ButtonColumn:
                text: "Descripticion"

        RecycleView:
            id: rv
            scroll_wheel_distance: dp(12) # cantidad de filas que rueda
            bar_width: dp(10)
            viewclass: 'Row'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)
        BoxLabel
            size_hint_y: .01