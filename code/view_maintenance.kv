#: import C kivy.utils.get_color_from_hex
<ViewM@RecycleKVIDsDataViewBehavior+BoxLayout>:
    canvas.before:
        Color:
            rgba: C("#737373")
        Rectangle:
            size: self.size
            pos: self.pos
    spacing: "2sp"
    padding: "3sp"
    LabelDate:
        size_hint_x: .2
        id: ide
    LabelDateLong:
        id: authorized
    LabelDate:
        id: entity
        size_hint_x: .78
    LabelDate:
        id: assigned
    LabelDate:
        id: id_maint
        size_hint_x: .35
    LabelDateLong:
        id: implement
        size_hint_x: .75
    LabelDate
        id: date
        size_hint_x: .75
    LabelDate
        id: programmed
        size_hint_x: .75
    LabelDate
        id: state_main
        size_hint_x: .19

<MaintenanceView>:
    rv: rv
    seeker: seeker
    BoxContainer:
        padding: "10sp"
        orientation: 'vertical'
        BoxContainer:
            size_hint_y: .1
            BoxLabel:
                size_hint_x: .1
            ImageButton:
                size_hint_x: .1
                source: 'icos/arrow_back.ico'
                size_hint: .1, .7
                on_release: app.go_menu()
                on_release: root.clear()
                on_release: seeker.text = message.text = ""
            BoxLabel:
                size_hint_x: .65
            Tittle:
                size_hint_y: .7
                text: "REGISTRO DE MANTENIMIENTOS"
            BoxLabel:
                size_hint_x: 1.
        BoxContainerSentences:
            orientation: "vertical"
            size_hint_y: .35
            BoxContainer:
                BoxLabel:
                    size_hint_x: .4
                CustomButton2:
                    text: 'Ver todos'
                    on_release: message.text = root.show_all()
                    on_press: seeker.text = ""
                CustomButton2:
                    text: 'Limpiar pantalla'
                    on_release: root.clear()
                    on_release: message.text = seeker.text = ""
                BoxLabel:
                    size_hint_x: .4
            BoxContainer:
                size_hint_y: 1.
                BoxLabel
                TextInput:
                    id: seeker
                    size_hint_x: 0.9
                    hint_text: 'Buscar'
                    multiline: False
                    padding: dp(5), dp(5), dp(5), dp(5)
                    on_focus: message.text = ''
                CustomButton2:
                    size_hint_x: 0.5
                    text: 'Date'
                    on_release: message.text = str(root.search(self.text, seeker.text))
                CustomButton2:
                    size_hint_x: 0.5
                    text: 'Implement'
                    on_release: message.text = str(root.search(self.text, seeker.text))
                CustomButton2:
                    size_hint_x: 0.5
                    text: "Maintenance"
                    on_release: message.text = str(root.search(self.text, seeker.text))
                BoxLabel
            BoxLabel
            TextMessage:
                size_hint: 1., .6
                id: message
        GridLayout:
            cols: 9
            size_hint_y: None
            height: dp(20)
            spacing: "2sp"
            ButtonColumn:
                size_hint_x: .2
                text: "ID"
                on_release: root.sort(self.text)
            ButtonColumn:
                text: "Autoriza"
                on_release: root.sort(self.text)
            ButtonColumn:
                text: "Entidad"
                size_hint_x: .8
                on_release: root.sort(self.text)
            ButtonColumn:
                text: "Asignado"
                on_release: root.sort(self.text)
            ButtonColumn:
                size_hint_x: .35
                text: "ID MANT"
                on_release: root.sort(self.text)
            ButtonColumn:
                text: "Implemento"
                size_hint_x: .75
            ButtonColumn:
                size_hint_x: .76
                text: "Solicitud"
                on_release: root.sort(self.text)
            ButtonColumn:
                size_hint_x: .76
                text: "Programado"
                on_release: root.sort(self.text)
            ButtonColumn:
                size_hint_x: .2
                text: "State"
                on_release: root.sort(self.text)

        RecycleView:
            id: rv
            scroll_wheel_distance: dp(12) # cantidad de filas que rueda
            bar_width: dp(10)
            viewclass: 'ViewM'
            RecycleBoxLayout:
                default_size: None, dp(56)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(2)
        BoxLabel
            size_hint_y: .01