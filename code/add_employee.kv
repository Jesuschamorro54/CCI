#: import C kivy.utils.get_color_from_hex

<HireEmployee>:
    FloatLayout:
        # Box containing the complete app
        BoxLayout:
            orientation: "vertical"
            spacing: "5sp"
            BoxContainer:
                orientation: "horizontal"
                size_hint_y: .3
                BoxLabel:
                    size_hint_x: .1
                BoxContainerSentences:
                    size_hint_x: .1
                    BoxLabel:
                        size_hint_x: .1
                    ImageButton:
                        source: 'icos/arrow_back.ico'
                        size_hint: .4, .7
                        on_release: app.go_menu()
                        on_release: date_init.text = name.text = cargo.text = cellphone.text = av.text = kra.text = dg.text = tr.text = number.text = district.text = ""
                    BoxLabel:
                        size_hint_x: .1
                BoxLabel:
                    size_hint_x: .3
                BoxContainerSentences:
                    BoxLabel:
                        size_hint_x: .3
                    Tittle:
                        size_hint_y: .7
                        text: "CONTRATAR EMPLEADOS"
                    BoxLabel:
                        size_hint_x: .5
                BoxContainerSentences:
                    size_hint_x: .2
                    BoxLabel:
                        size_hint_x: 1.9
                    ImageButtonR:
                        size_hint_y: .8
                        source: 'icos/reload.ico'
                        on_release: root.reload()
                        on_release: text_notice.text = name.text = cellphone.text = ''
                        on_release: av.text = kra.text = dg.text = tr.text = number.text = district.text = ""
                        on_release: cargo.text = "deploy"
                        Image:
                            size_hint_x: .4
                BoxLabel:
                    size_hint_x: .2
            # Box containing Name and Telephone
            BoxContainer:
                orientation: "horizontal"
                #------#
                BoxLabel:
                    size_hint_x: .1
                BoxContainerSentences:
                    orientation: "vertical"
                    BoxContainer:
                        LabelText:
                            font_size: "18sp"
                            size_hint: .21 , .6
                            text: "Nombres y Apellidos"
                        Tex:
                            size_hint: .3, .6
                            id: name
                            on_focus: text_notice.text = ""
                        BoxLabel:
                            size_hint_x: .4
                    BoxContainer:
                        LabelText:
                            font_size: "18sp"
                            size_hint: .2, .6
                            text: "Telefono"
                        Tex:
                            size_hint: .4, .6
                            id: cellphone
                            on_focus: text_notice.text = ""
                        BoxLabel:

                    BoxContainer:
                        LabelText:
                            font_size: "18sp"
                            size_hint: .2, .6
                            text: "CARGO"
                        Spinner:
                            id: cargo
                            font_size: "14sp"
                            size_hint: .4, .6
                            background_color: C("#4D4D4D")
                            foreground_color: C("FFFFFF")
                            text: "deploy"
                            on_release: cargo.values = root.return_post()
                            on_release: text_notice.text = ""
                        BoxLabel:
                #------#
                BoxLabel:
                    size_hint_x: .3

            # Containing Address
            BoxContainer:
                size_hint_y: .6
                BoxLabel:
                    size_hint_x: .1
                BoxContainerSentences:
                    padding: "0sp"
                    spacing: "2sp"
                    orientation: "vertical"
                    canvas:
                        Color:
                            rgba: C('#1F618D')
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                    TextMessage:
                        color: C("FFFFFF")
                        size_hint: 1, .7
                        text: "DIRECCION"
                    BoxContainer:
                        LabelText:
                            text: "C:"
                        Tex:
                            id: av
                            hint_text: "null"
                            on_focus: text_notice.text = ""
                        BoxLabel
                        LabelText:
                            text: "Kra:"
                        Tex:
                            id: kra
                            hint_text: "null"
                            on_focus: text_notice.text = ""
                        BoxLabel
                        LabelText:
                            text: "Dg:"
                        Tex:
                            id: dg
                            hint_text: "null"
                            on_focus: text_notice.text = ""
                        BoxLabel
                        LabelText:
                            text: "Tr:"
                        Tex:
                            id: tr
                            hint_text: "null"
                            on_focus: text_notice.text = ""
                    BoxContainer:
                        LabelText:
                            text: "#:"
                            size_hint_x: .5
                        Tex:
                            id: number
                            hint_text: "null"
                            on_focus: text_notice.text = ""
                        BoxLabel
                        LabelText:
                            text: "Barrio:"
                        Tex:
                            size_hint_x: 2.5
                            id: district
                            hint_text: "null"
                            on_focus: text_notice.text = ""
                    BoxLabel
                        size_hint_y: .2

                BoxLabel:
                    size_hint_x: .1

            BoxContainer:
                BoxLabel:
                    size_hint_x: .4
                BoxContainerSentences:
                    orientation: "vertical"
                    BoxContainer:
                        size_hint_y: .7
                        LabelText:
                            text: "Fecha de inicio"
                        Tex:
                            hint_text: "YYYY-MM-DD"
                            id: date_init
                            markup: True
                            on_focus: text_notice.text = ""
                    BoxContainer:
                        size_hint_y: .5
                        TextMessage:
                            id: text_notice
                            text: ""
                    BoxContainer:
                        spacing: "20sp"
                        CustomButton:
                            text: "Cancelar"
                            on_release: date_init.text = name.text = cargo.text = cellphone.text = av.text = kra.text = dg.text = tr.text = number.text = district.text = ""
                        CustomButton:
                            id: add
                            text: "AÃ±adir"
                            on_release:
                                text_notice.text = str(root.add_employee(f"{name.text},{cargo.text},{cellphone.text},null,{date_init.text}", root.insert_address(f"{av.text},{kra.text},{dg.text},{tr.text},{number.text},{district.text}")))
                    BoxLabel:
                        size_hint_y: 1.
                BoxLabel:
                    size_hint_x: .4