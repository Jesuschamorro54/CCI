<WindowMenu>:
    FloatLayout:
        BoxContainer:
            orientation: "vertical"

            BoxContainerSentences:
                size_hint_y: .2
                BoxLabel:
                BoxContainer:
                    Tittle:
                        text: "Inicio"
                BoxLabel:
            BoxContainerSentences:
                orientation: "horizontal"
                BoxLabel:
                    size_hint_x: .1
                BoxContainerSpecial:
                    orientation: "horizontal"
                    BoxContainerSpecial:
                        size_hint_x: .2
                        #------------------------------------------------
                        BoxLabel
                        #------------------------------------------------
                        ImageLabel:
                            source: 'icos/maleta.ico'
                        ImageLabel:
                            source: 'icos/carro.ico'
                        #------------------------------------------------
                        BoxLabel
                        #------------------------------------------------
                        ImageLabel:
                            source: 'icos/clock_b.ico'
                        #------------------------------------------------
                        BoxLabel
                        #------------------------------------------------
                        ImageLabel:
                            source: 'icos/eye.ico'
                        ImageLabel:
                            source: 'icos/eye.ico'
                        #------------------------------------------------
                        BoxLabel
                        #------------------------------------------------
                    BoxContainerSpecial:
                        #------------------------------------------------
                        BoxLabel
