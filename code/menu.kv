                BoxLabel:
                    size_hint_x: 1.7

            BoxContainerSentences:
                orientation: "vertical"
                size_hint_y: .4
                BoxContainer:
                    size_hint_y: .5
                    orientation: "horizontal"
                    BoxLabel
                    BoxContainerSpecial:
                        orientation: "vertical"
                        BoxLabel:
                            size_hint_y: .1
                        CustomButtonSpecial:
                            size_hint_y: .5
                            text: "Cerrar sesion"
                            on_release: app.login_back()
                        BoxLabel

                    BoxLabel