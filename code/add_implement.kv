#: import C kivy.utils.get_color_from_hex

<AddImplement>:
    add: add
    name: name
    supplier: supplier
    comprar: comprar
    FloatLayout:
        BoxContainer:
            orientation: "vertical"
            BoxContainerSentences:
                size_hint_y: .3
                orientation: "vertical"
                BoxContainer:
                    Tittle:
                        size_hint_y: 1.
                        text: "Comprar Implementos"
                BoxContainer:
                    size_hint_y: .4
                    TextMessage:
                        id: error_text
            BoxContainerSentences:
                orientation: "vertical"
                size_hint_y: .7
                BoxContainer:
                    orientation: "horizontal"
                    BoxLabel
                    BoxContainerSentences
                        size_hint_x: .1
                        orientation: "vertical"
                        CustomButton:
                            size_hint_y: .8
                            text: "reload"
                            on_release: root.reloading()
                            on_release: error_text.text = passed_text.text = name.text = costo.text = cantidad.text = supplier.text = ""
                        BoxLabel
                GridLayout:
                    size_hint_y: .7
                    spacing: "1sp"
                    padding: "2sp"
                    rows: 2
                    cols: 4
                    LabelDate:
                        text: "Nombre"
                        font_size: "18sp"
                    LabelDate:
                        size_hint_x: .4
                        text: "Costo"
                        font_size: "18sp"
                    LabelDate:
                        size_hint_x: .3
                        text: "Cantidad"
                        font_size: "18sp"
                    LabelDate:
                        text: "Proveedor"
                        font_size: "18sp"
                    Tex:
                        hint_text: "Nombre"
                        id: name
                        on_focus: passed_text.text = error_text.text = ""
                        on_focus: add.disabled = True
                    Tex:
                        size_hint_x: .4
                        hint_text: "Costo"
                        id: costo
                        on_focus: passed_text.text = error_text.text = ""
                        on_focus: add.disabled = True
                    Tex:
                        size_hint_x: .3
                        hint_text: "Cantidad"
                        id: cantidad
                        on_focus: passed_text.text = error_text.text = ""
                        on_focus: add.disabled = True
                    Tex:
                        hint_text: "Proveedor"
                        id: supplier
                        on_focus: passed_text.text = error_text.text = ""
                        on_focus: add.disabled = True
                BoxContainer:
                    size_hint_y: .4
                    orientation: "horizontal"
                    BoxLabel:
                    LabelText:
                        font_size: "18sp"
                        text: "Total de la compra:"
                    Tex:
                        id: total
                        readonly: True
                        text: "$" + str(root.total(cantidad.text, costo.text))
                    CustomButton:
                        size_hint_x: .8
                        text: "Verificar"
                        on_release: error_text.text = str(root.validate(name.text, supplier.text, total.text))
                    CustomButton:
                        id: add
                        size_hint_x: .8
                        text: "+Add"
                        disabled: True
                        on_release: passed_text.text = str(root.add_new(f"'{name.text}'", f"{supplier.text}"))
                        on_press: passed_text.text = error_text.text = ""
                    BoxLabel:
                        size_hint_x: .2
            BoxContainerSentences:
                orientation: "vertical"
                spacing: "10sp"
                TextMessage:
                    id: passed_text
                    size_hint: 1., 2.
                    font_size:
                    color: C("#33BB00")
                BoxContainer:
                    BoxLabel
                BoxContainer:
                    BoxLabel
                    CustomButton:
                        text: "Cancelar"
                        on_release: app.go_menu()
                        on_release: passed_text.text = error_text.text = ""
                    CustomButton:
                        id: comprar
                        text: "Comprar"
                        disabled: True
                        on_release: passed_text.text = str(root.add_commodity(f"{cantidad.text}, {costo.text}, {total.text}"))
                        on_release: error_text.text = ""
                    BoxLabel
                BoxLabel
                    size_hint_y: 3.