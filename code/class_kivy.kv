#: import C kivy.utils.get_color_from_hex
#: set color_no_click C("#232323")
#: set color_click C("#ED0707")
#: set color_no_click2 C("#909090")
#: set color_click2 C("#2E86C1")

<CustomButton@Button>:
    font_size: "20sp"
    color: C("FFFFFF")
    background_color: 0,0,0,0

    canvas.before:
        Color:
            rgba: color_no_click if self.state == "normal" else color_click
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]


#AMARILLO
<BoxLabel@Label>:
    canvas.before:
        Color:
            #rgba: C("#FFC300")
            rgba: C("#000000")
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20, 8]
    size_hint: 1. , 1.

#ROJO
<LabelText@Label>:
    canvas.before:
        Color:
            #rgba: C("#ED0707")
            rgba: C("#000000")
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20, 8]
    size_hint: 1. , 1.
    bold: True

#MORADO
<BoxContainer@BoxLayout>:
    padding: "5sp"
    spacing: "5sp"
    canvas:
        Color:
            #rgba: C('#900C3F')
            rgba: C("#000000")
        RoundedRectangle:
            pos: self.pos
            size: self.size
    size_hint: 1. , 1.
    bold: True

#AZUL CLARO
<BoxContainerSentences@BoxLayout>:
    padding: "5sp"
    spacing: "5sp"
    canvas:
        Color:
            #rgba: C('#2E86C1')
            rgba: C("#000000")
        RoundedRectangle:
            pos: self.pos
            size: self.size
    size_hint: 1. , 1.
    bold: True

<Tittle@Label>:
    canvas:
        Color:
            rgba: 255, 255, 255, .2
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [20,]
    font_size: "20sp"
    bold: True
    color: C("#FFFFFF")
    size_hint_y: 0.5

<TextMessage@Label>:
    font_size: "16sp"
    readonly: True
    background_color: C("000000")
    color: C("FF0000")
    size_hint: .3, .6
    bold: True

<Tex@TextInput>:
    text: ""
    font_size: "18sp"
    multiline: False
    halign: "center"
    background_color: C("#181818")
    foreground_color: C("FFFFFF")

<ButtonColum@Button>:
    background_color: 0,0,0,0
    bold: True
    canvas.before:
        Color:
            rgba: C("#9A9A9A") if self.state == "normal" else C("5E5E5E")
        Rectangle:
            size: self.size
            pos: self.pos
    color: C("#010101")

<LabelDate@Label>:
    canvas.before:
        Color:
            rgba: C("#939393")
        Rectangle:
            size: self.size
            pos: self.pos
    padding_x: "5sp"
    padding_y: "5sp"

<LabelDateLong@LabelDate>:
    text_size: root.width, None
    size: self.texture_size

<CustomButton2@Button>:
    font_size: "20sp"
    color: C("FFFFFF")
    background_color: 0,0,0,0

    canvas.before:
        Color:
            rgba: color_no_click2 if self.state == "normal" else color_click2
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]

