#: import C kivy.utils.get_color_from_hex

#: set no_click C("#8B0000")
#: set click C("#5A0606")

#: set no_click2 C("#ECF0F1")
#: set click2 C("#3498DB")

#: set invisible C("#1A4765")


# ---------------------------- BoxLayout --------------------------------- #
<Background@BoxLayout>:
    orientation: "vertical"
    padding: "5sp"
    spacing: "5sp"
    canvas:
        Color:
            rgba: invisible
        Rectangle:
            pos: self.pos
            size: self.size

<BackgroundDark@Background>
    orientation: "vertical"
    padding: "5sp"
    spacing: "5sp"
    canvas:
        Color:
            rgba: C("#113C61")
        Rectangle:
            pos: self.pos
            size: self.size

<LineWidget@BoxLayout>
    orientation: "vertical"
    padding: "5sp"
    spacing: "0sp"
    canvas:
        Color:
            rgba: C("#154360")
        RoundedRectangle:
            pos: self.pos
            size: self.size

<ContainerBar@BoxLayout>
    orientation: "horizontal"
    padding: "5sp"
    spacing: "5sp"
    canvas:
        Color:
            rgba: C("#ECF0F1")
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint_y: .15

<LabelTextBar@Label>
    font_size: "18"
    bold: True
    color: C("000000")
    canvas.before:
        Color:
            rgba: C("#ECF0F1")
            #rgba: C("#A41010")
        Rectangle:
            pos: self.pos
            size: self.size

<ImageBoxBar@BoxLayout>
    source: None
    canvas.before:
        Color:
            rgba: C("#ECF0F1")
            #rgba: C("A41010")
        RoundedRectangle:
            pos: self.pos
            size: self.size

    Image:
        source: root.source
        center: root.center
        size: self.size

# ROSADO
<ContainerBig@BoxLayout>:
    orientation: "vertical"
    padding: "5sp"
    spacing: "5sp"
    canvas:
        Color:
            rgba: invisible
            #rgba: C("#FF8585")
        Rectangle:
            pos: self.pos
            size: self.size

#VERDE
<ContainerMedium@BoxLayout>:
    padding: "5sp"
    spacing: "1sp"
    canvas:
        Color:
            rgba: C("#113C61") # dentro del visible
            #rgba: C("#71FF5D")
        RoundedRectangle:
            pos: self.pos
            size: self.size

#AZUL
<ContainerVisible@BoxLayout>
    orientation: "vertical"
    padding: "5sp"
    spacing: "5sp"
    canvas:
        Color:
            rgba: C("#113C61")
            #rgba: C("#7E91FF")
        RoundedRectangle:
            pos: self.pos
            size: self.size


<ImageBox@BoxLayout>
    source: None
    canvas.before:
        Color:
            rgba: C("113C61")
            #rgba: C("#C4E0FF")
        RoundedRectangle:
            pos: self.pos
            size: self.size

    Image:
        source: root.source
        center: root.center
        size: self.size

<ContainerWidget@BoxLayout>:
    orientation: "vertical"
    padding: "5sp"
    spacing: "3sp"
    source: None
    text: None
    canvas:
        Color:
            rgba: C("#113C61")
            #rgba: C("#A41010")
        RoundedRectangle:
            pos: self.pos
            size: self.size
    ImageBox:
        source: root.source
        center: root.center
        size: self.size


# ---------------------------- Button --------------------------------- #
<CustomButtonA@Button>:
    color: C("FFFFFF")
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: no_click if self.state == "normal" else click
        RoundedRectangle:
            pos: self.pos
            size: root.size

<CustomButtonB@Button>:
    bold: True
    color: C("000000")
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: no_click2 if self.state == "normal" else click2
        RoundedRectangle:
            pos: self.pos
            size: root.size
            radius: [3,]

<CancelButton@Button>
    bold: True
    color: C("FFFFFF")
    background_color: 0,0,0,0
    canvas.before:
        Color:
            rgba: no_click if self.state == "normal" else click
        RoundedRectangle:
            pos: self.pos
            size: root.size
            radius: [3,]

# ---------------------------- Label --------------------------------- #
<LabelSpacing@Label>:
    canvas:
        Color:
            rgba: invisible
            #rgba: C("#F8FF5D")
        Rectangle:
            pos: self.pos
            size: self.size

<LabelSpacing2@Label>:
    size_hint_y: .4
    font_size: "16sp"
    color: C("FFFFFF")
    bold: True
    canvas.before:
        Color:
            rgba: C("#113C61")

        Rectangle:
            pos: self.pos
            size: self.size

# MORADO
<LabelTittle@Label>:
    font_size: "40sp"
    color: C("FFFFFF")
    bold: True
    canvas.before:
        Color:
            rgba: invisible
            #rgba: C("#6C10A4")
        Rectangle:
            pos: self.pos
            size: self.size

<Message@Label>
    font_size: "16sp"
    color: C("FFFFFF")
    bold: True
    size_hint_y: .1

# ---------------------------- Text --------------------------------- #
<Text@TextInput>:
    text: ""
    font_size: "18sp"
    multiline: False
    background_color: C("FFFFFF")
    #foreground_color: C("FFFFFF")