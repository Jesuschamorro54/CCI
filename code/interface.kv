#: import C kivy.utils.get_color_from_hex
#: include add_employee.kv
#: include implement.kv
#: include add_implement.kv
#: include maintenance.kv

<Menu>:
    FloatLayout:
        BoxContainer:
            orientation: "vertical"

            BoxContainerSentences:
                size_hint_y: .2
                BoxLabel:
                BoxContainer:
                    Tittle:
                        text: "Inicio"
                BoxLabel:
            BoxContainerSentences:
                orientation: "horizontal"
                BoxLabel:
                    size_hint_x: .1
                BoxContainerSpecial:
                    #------------------------------------------------
                    BoxLabel
                    #------------------------------------------------
                    CustomButtonSpecial:
                        markup: True
                        text: "· Contratar Empleados           "
                        on_release: app.go_hire()
                    CustomButtonSpecial:
                        text: "· Comprar implementos         "
                        on_release: app.go_buy_implement()
                    #------------------------------------------------
                    BoxLabel
                    #------------------------------------------------
                    CustomButtonSpecial:
                        text: "· Programar mantenimientos"
                        on_release: app.go_plan_maintenance()
                    #------------------------------------------------
                    BoxLabel
                    #------------------------------------------------
                    CustomButtonSpecial:
                        text: "· Registro de implementos     "
                        on_release: app.go_implement_view()
                    CustomButtonSpecial:
                        text: "· Lista de mantenimientos     "
                    #------------------------------------------------
                    BoxLabel
                    #------------------------------------------------
                BoxLabel

            BoxContainerSentences:
                orientation: "vertical"
                size_hint_y: .4
                BoxContainer:
                    size_hint_y: .5
                    orientation: "horizontal"
                    BoxLabel
                    BoxContainerSpecial:
                        orientation: "vertical"
                        BoxLabel:
                            size_hint_y: .1
                        CustomButtonSpecial:
                            size_hint_y: .5
                            text: "Terminar"
                            on_release: exit()
                        BoxLabel

                    BoxLabel